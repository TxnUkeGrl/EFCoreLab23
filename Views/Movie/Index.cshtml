@model List<Movie>

<h1>Index</h1>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Genre</th>
        <th>Runtime</th>
    </tr>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Id</td>
            <td>@movie.Title</td>
            <td>@movie.Genre</td>
            <td>@movie.Runtime</td>
            <td><a href="Movie/DeleteMovie?Id=@movie.Id" class="btn btn-danger">Delete @movie.Title</a></td>
            <td><a href="Movie/MovieForm?id=@movie.Id" class="btn btn-warning">Edit @movie.Title</a></td>
        </tr>
    }
</table>

<a href="Movie/MovieForm" class="btn btn-dark">Add a new Movie</a>
